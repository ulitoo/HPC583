{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            //"command": "/usr/local/cuda-12.3/bin/nvcc",  //Nvidia Compiler
            "command": "/usr/bin/mpic++",            
            //"command": "/usr/bin/g++",
            "args": [
                //"-fdiagnostics-color=always", //REMOVE FOR CUDA COMPILER
                //"-g",
                "-O3",
                "${file}",
                // include a file_f.cpp file with all functions
