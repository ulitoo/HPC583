{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            //"command": "/usr/bin/nvcc",  //Nvidia Compiler
            "command": "/usr/local/bin/mpic++",            
            //"command": "/usr/bin/g++",
            "args": [
                //"-fdiagnostics-color=always", //REMOVE FOR CUDA COMPILER
                //"-g",
                "-O3",
                "${file}",
                // include a file_f.cpp file with all functions
                //"${fileDirname}/${fileBasenameNoExtension}_f.cpp",   // ADD in case you need functions file
                // include general functions file functions.cpp
                //"${fileDirname}/0.CUDA_functions.cu", 
                //"-arch", "sm_61", // CUDA 6.1 nvidia architecture Pascal
                //"-arch", "sm_50", // CUDA 5.0 nvidia architecture Maxwell
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lfftw3",
                "-lm",
                //"-lblas", "-llapack","-llapacke", // All included now in libopenblas
                "-lscalapack",
                "-lopenblas",
                //"-lgfortran"
                //"-lcublas",       //CUDA and NVIDIA GPU
                //"-lcusolver",     //CUDA and NVIDIA GPU
                //"-lcudart"       //CUDA and NVIDIA GPU
                //"-lmagma"        //CUDA and NVIDIA GPU
                //"-lpthread",
                "-lboost_iostreams",
                "-lboost_filesystem",
                "-lboost_system"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}