{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/nvcc",
            //"command": "/usr/local/bin/mpic++",
            "args": [
                //"-fdiagnostics-color=always", //REMOVE FOR CUDA COMPILER
                "-g",
                "-O3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lfftw3",
                "-lm",
                "-lscalapack",
                "-lopenblas",
                "-lboost_iostreams",
                "-lboost_filesystem",
                "-lboost_system"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}